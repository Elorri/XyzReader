<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>


    <style name="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
    </style>

    <style name="AppTheme.Details">
        <item name="android:windowEnterTransition">@transition/slide_right</item>

        <!-- note this apply to the activity disapearing ie ArticleListActivity -->
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>

        <!-- this line does not work with my device, I have to do it manually in the activity -->
        <!--<item name="android:windowSharedElementEnterTransition">@transition/keep</item>-->
    </style>


    <style name="ArticleTitle">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:shadowColor">@color/secondary_text</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ArticleSubtitle">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:shadowColor">@color/secondary_text</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="ArticleDetailTitle">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="android:lineSpacingMultiplier">@fraction/small_multiplier</item>
    </style>

    <style name="ArticleDetailByLine">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ArticleDetailBody">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:lineSpacingMultiplier">@fraction/normal_multiplier</item>
    </style>

</resources>
